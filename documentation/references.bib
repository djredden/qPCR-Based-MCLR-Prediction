	journal = {Harmful Algae},
	author = {Schürmann, Quirijn J. F. and Visser, Petra M. and Sollie, Susan and Kardinaal, W. Edwin A. and Faassen, Elisabeth J. and Lokmani, Ridouan and van der Oost, Ron and Van de Waal, Dedmer B.},
