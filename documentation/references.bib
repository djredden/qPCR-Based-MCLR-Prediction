	month = mar,
	year = {2012},
	keywords = {qPCR, Cyanobacteria, Cyanotoxin, Microcystin, Water quality, Cylindrospermopsin, Molecular detection, Nodularin, Saxitoxin, Toxic blooms, Toxin biosynthesis},
	pages = {19--25},
